extends ../layout/common.pug

block content

    h1.display-1 Users
    ul.list-group
        each user in users
            li.list-group-item
                span= user.name
                span &nbsp;
                a(href="/users/view/" + user.id) View
                span &nbsp;
                a(href="/users/delete/" + user.id, style="color: red") Delete
                span &nbsp;
                a(href="/users/edit/" + user.id, style="color: green") Edit
    p
        a.btn.btn-primary(href="/users/add") Add user
        span &nbsp;
        a.btn.btn-primary(href="/") Back
