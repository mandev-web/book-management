extends ../layout/common.pug

block content
    h1.display-1 Add users

    if errors
        each error in errors
            .alert.alert-danger(role = 'alert')= error
    form(action="/users/add", method="POST", enctype="multipart/form-data")
        .form-group
            label Name
            input#exampleInputEmail1.form-control(type='text',name="name", value= values ? values.name : "")
            label Mail
            input#exampleInputEmail1.form-control(type='mail',name="mail", value= values ? values.mail : "")
            label Age
            input#exampleInputEmail1.form-control(type='number',name="age", value= values ? values.age : "")
            label Job
            input#exampleInputEmail1.form-control(type='text',name="job", value= values ? values.job : "")
            label Avatar
            input#exampleInputEmail1.form-control(type='file',name="avatar")

        button.btn.btn-primary(type='submit') Submit
        span &nbsp;
        a.btn.btn-primary(href="/books") Back
