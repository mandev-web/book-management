extends ../layout/common.pug

block content
    h1.display-1 Login

    if errors
        each error in errors
            .alert.alert-danger(role = 'alert')= error

    form(action="/auth/login", method="POST")
        .form-group
            label Mail
            input#exampleInputEmail1.form-control(type='text',name="mail", value= values ? values.mail: "")
            label Password
            input#exampleInputEmail1.form-control(type='password',name="password")
        button.btn.btn-primary(type='submit') Login
        span &nbsp;
        a.btn.btn-primary(href="/") Back
