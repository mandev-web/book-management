extends ../layout/common.pug

block content

    .row
        each product in products
            .col-md-4
                .card(style='width: 18rem;')
                    img.card-img-top(src='', alt='')
                    .card-body
                        h5.card-title= product.title
                        p.card-text=product.content
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
    
    nav(aria-label='Page navigation example')
    ul.pagination
        li.page-item
        if page != 1
            a.page-link(href='/products?page='+ (page-1)) Previous
        if page < 6
            li.page-item
            a.page-link(href='/products?page='+ page)=page
            li.page-item
            a.page-link(href='/products?page='+ (page+1))=page+1
            li.page-item
            a.page-link(href='/products?page='+ (page+2))=page+2
            li.page-item
            a.page-link(href='/products?page='+ (page+1)) Next
